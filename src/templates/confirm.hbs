<mjml>
  <mj-head>
    <mj-font name="Kantumruy" href="https://fonts.googleapis.com/css2?family=Kantumruy&family=Source+Sans+Pro&display=swap" />
  </mj-head>
  <mj-body background-color="#F4F4F4">
    <mj-section background-color="#2c3e50" background-repeat="repeat" padding="0px 0px" text-align="center">
      <mj-column vertical-align="middle">
        <mj-text align="center" font-size="32px" font-weight="bold" padding="25px" font-family="Kantumruy, Source Sans Pro, sans-serif" color="white">
          ការចុះឈ្មោះ
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section background-color="#FFFFFF" background-repeat="repeat" padding-bottom="0px" padding-top="0">
      <mj-column width="100%">
        <mj-text align="center" font-size="28px" color="black" font-family="Kantumruy, Source Sans Pro, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="28px">{{hello}},
          <p style="font-size:16px; color:black"><i>{{fullName}}</i></p>
        </mj-text>
        <mj-text align="center" color="black" font-size="12px" font-family="Kantumruy, Source Sans Pro, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="24px"><i>{{email}}</i></mj-text>
      </mj-column>
    </mj-section>
    <mj-section background-color="#FFFFFF" background-repeat="repeat" padding-bottom="5px" padding-top="0">
      <mj-column width="100%">
        <mj-divider border-color="black" border-width="2px" border-style="solid" padding-left="20px" padding-right="20px" padding-bottom="0px" padding-top="0"></mj-divider>
        <mj-text align="center" font-family="Kantumruy, Source Sans Pro, sans-serif" line-height="28px" color="black" font-size="13px" padding-left="25px" padding-right="25px" padding-bottom="20px" padding-top="28px"><span style="font-size:20px; font-weight:bold">{{header_text}}</span>
          <br />
          <span style="font-size:15px">{{purpose_one}}</span>
          <br />
          <span style="font-size:15px">{{instruction}}</span>
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section background-color="#FFFFFF" background-repeat="repeat" padding-bottom="5px">
      <mj-column>
        <mj-button background-color="#e74c3c" color="#FFFFFF" padding="60px 0 30px 0" href="{{link}}" font-weight="bold" font-size="16px">{{confirm_email}}</mj-button>
      </mj-column>
    </mj-section>
    <mj-section background-color="#FFFFFF" background-repeat="repeat" padding-bottom="20px" padding-top="20px">
    </mj-section>
    <mj-section background-color="#2c3e50" background-repeat="repeat" padding="0px 0px" text-align="center">
      <mj-column vertical-align="middle">
        <mj-text align="center" font-size="12px" font-weight="bold" padding="0 25px" font-family="Kantumruy, Source Sans Pro, sans-serif" color="white">
          info@Mengty.com
        </mj-text>
      </mj-column>
      <mj-column vertical-align="middle">
        <mj-social mode="horizontal" padding="30px">
          <mj-social-element name="facebook" href="https://www.facebook.com/profile.php?id=100086079594493"></mj-social-element>
          <mj-social-element name="github" href="https://github.com/limmengty"></mj-social-element>
          <mj-social-element name="youtube" href="https://www.youtube.com/watch?v=MjoaCkdYlAM&t=7s"></mj-social-element>
        </mj-social>
      </mj-column>
    </mj-section>
    <mj-section background-color="#ecf0f1" background-repeat="repeat" background-size="auto" padding="20px 0px 0px 0px" text-align="center">
      <mj-column width="100%" padding="0">
        <mj-text color="black" font-family="Kantumruy, Source Sans Pro, sans-serif" font-size="12px" align="center" line-height="24px" align="align">
          {{you_are_receiving_this_email}}
        </mj-text>
        <mj-text color="black" font-family="Kantumruy, Source Sans Pro, sans-serif" font-size="11px" align="center" line-height="16px">
          &copy; {{tfd_right}}
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section padding-top="0" background-color="#ecf0f1" background-repeat="repeat">
      <mj-group>
        <mj-column width="100%" padding-right="0">
          <mj-text font-size="11px" font-family="Kantumruy, Source Sans Pro, sans-serif" align="center" line-height="16px" font-weight="bold">
            <a class="footer-link" href="https://tfdevs.com/privacy">{{privacy}}</a>&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;<a class="footer-link" href="https://tfdevs.com/tos">{{tos}}</a>
          </mj-text>
        </mj-column>
      </mj-group>
    </mj-section>
  </mj-body>
</mjml>